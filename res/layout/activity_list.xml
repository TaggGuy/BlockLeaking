<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dmlwp.blockleaking.ListActivity"
    android:background="#BDBDBD" >
    
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_check_button"
        android:layout_centerHorizontal="true" >
    </ListView>

    <Button
        android:id="@+id/list_check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/listView"
        android:text="확인" />

    <Button
        android:id="@+id/list_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_check_button"
        android:layout_alignBottom="@+id/list_check_button"
        android:layout_toLeftOf="@+id/list_check_button"
        android:text="전체" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/listView"
        android:layout_alignTop="@+id/list_all_button"
        android:text="원하는 앱선택후 \n확인을눌러주세요"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
