<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dmlwp.blockleaking.MainActivity"
    android:background="#BDBDBD">

    <TextView
        android:id="@+id/content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="16dp"
        android:text="@string/facility_2" />

    <TextView
        android:id="@+id/content3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/content1"
        android:layout_below="@+id/content1"
        android:layout_marginTop="16dp"
        android:text="@string/facility_3" />

    <TextView
        android:id="@+id/content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/content2"
        android:layout_below="@+id/content2"
        android:layout_marginTop="16dp"
        android:text="@string/facility_1" />

    <ImageView
        android:id="@+id/imageOn"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_alignLeft="@+id/imageOff"
        android:layout_alignParentTop="true"
        android:src="@drawable/on" />

    <ImageView
        android:id="@+id/imageOff"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/off" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/facility_title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/warning_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/warning_text1"
        android:layout_centerHorizontal="true"
        android:text="반드시 전원버튼을 지그시 눌러주세요" />

    <TextView
        android:id="@+id/warning_text1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/content3"
        android:layout_below="@+id/content3"
        android:layout_marginTop="24dp"
        android:text="절전모드를 킨후 홈버튼을 누르지마세요"
        android:textColor="#FF0000"
        android:textSize="17sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/warning_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/warning_text1"
        android:layout_toLeftOf="@+id/warning_text1"
        android:src="@drawable/warning" />

</RelativeLayout>